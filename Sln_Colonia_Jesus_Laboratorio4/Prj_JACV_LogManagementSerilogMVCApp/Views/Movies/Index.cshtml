@model IEnumerable<Prj_JACV_LogManagementSerilogMVCApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovDirector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovWorldWideGross)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovDateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovDirector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovWorldWideGross)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovDateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model DateTime?

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prj_JACV_IMemoryCacheMVCApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1 class="display-4 text-center">Welcome</h1>
        <p class="text-center">Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2>Actions</h2>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a asp-controller="Home" asp-action="CacheGet">Get</a></li>
                        <li class="list-group-item"><a asp-controller="Home" asp-action="CacheSet">Set</a></li>
                        <li class="list-group-item"><a asp-controller="Home" asp-action="CacheRemove">Remove</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <h3 class="mt-4">Current Time: @DateTime.Now.TimeOfDay.ToString()</h3>
                <h3>Cached Time: @(Model == null ? "No cache entry found" : Model.Value.TimeOfDay.ToString())</h3>
            </div>
        </div>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
